@using LibraryDAL.Models
@{
    ViewBag.Title = "Main Page";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
    List<Book> Books = ViewBag.Books;
    List<DBUser> Readers = ViewBag.Users;
    List<DBUser> Librarians = ViewBag.Librarians;
}

<section>
    <nav class="nav nav-pills nav-justified bottom-margin" role="tablist">
        <a class="nav-item nav-link active" href="#books" role="tab" data-toggle="tab">Books</a>
        <a class="nav-item nav-link" href="#readers" role="tab" data-toggle="tab">Readers</a>
        <a class="nav-item nav-link" href="#librarians" role="tab" data-toggle="tab">Librarians</a>
    </nav>

    @if (TempData["message"] != null)
    {
        <div class="alert alert-success">@TempData["message"]</div>
    }
    else if (TempData["errorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["errorMessage"]</div>
    }

    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="books">
            <div class="card-header">
                @Html.ActionLink("Add book", "EditBook", new { id = 0 },
                    new { @class = "btn btn-secondary" })
            </div>
            @if (Books == null || Books.Count == 0)
            {
                <h1 class="text-lg-center">No Books Yet</h1>
            }
            else
            {
                <table class="table table-striped table-bordered small">
                    <thead>
                        <tr>
                            <th class="text-center">ID</th>
                            <th class="text-center">Book Name</th>
                            <th class="text-center">Author</th>
                            <th class="text-center">In Stock</th>
                            <th class="text-center" colspan="2">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Books.Count; ++i)
                        {
                            <tr>
                                <td class="text-right">@(i + 1)</td>
                                <td>@Books[i].Name</td>
                                <td>@Books[i].Author</td>
                                <td class="text-center">@Books[i].InStock</td>
                                <td class="text-center">@Html.ActionLink("Edit", "EditBook", new { id = Books[i].BookID })</td>
                                <td class="text-center">@Html.ActionLink("Delete", "DeleteBook", new { id = Books[i].BookID })</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>

        <div role="tabpanel" class="tab-pane" id="readers">
            @if (Readers == null || Readers.Count == 0)
            {
                <h1 class="text-lg-center">No Readers Yet</h1>
            }
            else
            {
                <table class="table table-striped table-bordered small">
                    <thead>
                        <tr>
                            <th class="text-center">ID</th>
                            <th class="text-center">User name</th>
                            <th class="text-center">Email</th>
                            <th class="text-center">Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Readers.Count; ++i)
                        {
                            <tr>
                                <td class="text-right">@(i + 1)</td>
                                <td>@Readers[i].FirstName @Readers[i].LastName</td>
                                <td>@Readers[i].Email</td>
                                @if (Readers[i].IsBlock)
                                {
                                    <td class="text-center">Block</td>
                                    <td class="text-center">@Html.ActionLink("Unblock", "ChangeReaderStatus", new { id = Readers[i].Id })</td>
                                }
                                else
                                {
                                    <td class="text-center">Active</td>
                                    <td class="text-center">@Html.ActionLink("Block", "ChangeReaderStatus", new { id = Readers[i].Id })</td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>

        <div role="tabpanel" class="tab-pane" id="librarians">
            <div class="card-header">
                @Html.ActionLink("Add librarian", "CreateLibrarian", null, new { @class = "btn btn-secondary" })
            </div>
            @if (Librarians == null || Librarians.Count == 0)
            {
                <h1 class="text-lg-center">No Librarians Yet</h1>
            }
            else
            {
                <table class="table table-striped table-bordered small">
                    <thead>
                        <tr>
                            <th class="text-center">ID</th>
                            <th class="text-center">User name</th>
                            <th class="text-center">Email</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Librarians.Count; ++i)
                        {
                            <tr>
                                <td class="text-right">@(i + 1)</td>
                                <td>@Librarians[i].FirstName @Librarians[i].LastName</td>
                                <td>@Librarians[i].Email</td>
                                <td class="text-center">@Html.ActionLink("Delete", "DeleteLibrarian", new { id = Librarians[i].Id })</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</section>