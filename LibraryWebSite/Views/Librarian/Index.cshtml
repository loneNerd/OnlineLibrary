@using LibraryDAL.Models;

@{
    ViewBag.Title = "Main Page";
    Layout = "~/Views/Librarian/_LibrarianLayout.cshtml";
    List<PreOrder> PreOrders = ViewBag.PreOrders;
    List<Order> Orders = ViewBag.Orders;
}

<nav class="nav nav-pills nav-justified bottom-margin" role="tablist">
    <a class="nav-item nav-link active" href="#preOrders" role="tab" data-toggle="tab">PreOrders</a>
    <a class="nav-item nav-link" href="#orders" role="tab" data-toggle="tab">Orders</a>
</nav>

<div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="preOrders">

        @if (PreOrders == null || PreOrders.Count == 0)
        {
            <h1 class="text-lg-center">No Pre Orders Yet</h1>
        }
        else
        {
            <table class="table table-striped table-bordered small">
                <thead>
                    <tr>
                        <th class="text-center">ID</th>
                        <th class="text-center">Reader Name</th>
                        <th class="text-center">ISBNs</th>
                        <th class="text-center" colspan="2">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < PreOrders.Count; ++i)
                    {
                        <tr>
                            <td class="text-right">@(i + 1)</td>
                            <td class="text-right">@PreOrders[i].Reader.FirstName @PreOrders[i].Reader.LastName</td>
                            <td class="text-right">@PreOrders[i].Book.ISBN10</td>
                            <td class="text-center">@Html.ActionLink("Accept", "AcceptOrder", "Librarian", new { id = PreOrders[i].PreOrderID }, null)</td>
                            <td class="text-center">@Html.ActionLink("Decline", "DeclineOrder", "Librarian", new { id = PreOrders[i].PreOrderID }, null)</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

    <div role="tabpanel" class="tab-pane" id="orders">
        @if (Orders == null || Orders.Count == 0)
        {
            <h1 class="text-lg-center">No Orders Yet</h1>
        }
        else
        {
            <table class="table table-striped table-bordered small">
                <thead>
                    <tr>
                        <th class="text-center">ID</th>
                        <th class="text-center">Reader name</th>
                        <th class="text-center">ISBN</th>
                        <th class="text-center">Expired day</th>
                        <th class="text-center">Penalty</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Orders.Count; ++i)
                    {
                        <tr>
                            <td class="text-right">@(i + 1)</td>
                            <td class="text-right">@Orders[i].Reader.FirstName @Orders[i].Reader.LastName</td>
                            <td class="text-right">@Orders[i].Book.ISBN10</td>
                            <td class="text-right">@Orders[i].ExpiredDay.ToString("dd MMMM yyyy")</td>
                            <td class="text-right">@Orders[i].Penalty uah</td>
                            <td class="text-right">@Html.ActionLink("Close", "CloseOrder", "Librarian", new { id = Orders[i].OrderID }, null)</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>